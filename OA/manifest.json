{
    "manifest_version": 2,
    "name": "新华网OA辅助工具",
    "version": "0.2",
    "description": "新华网OA辅助工具提供消息提醒，自动OA强制登陆，文档查看，附件下载",
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "新华网OA",
        "default_popup": "popup.html"
    },
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "permissions": [
        "webRequest","notifications", "storage", "tabs","*://172.18.1.48/*","*://172.18.24.64/*","webRequestBlocking"
    ],
    "web_accessible_resources": [
        "images/*.png"
    ]
}
