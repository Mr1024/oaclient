{
    "manifest_version": 2,
    "name": "OA帮助助手",
    "version": "0.1",
    "description": "新华网OA扩展登陆助手",
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-40.png",
        "128": "images/icon-128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon-16.png",
            "38": "images/icon-40.png"
        },
        "default_title": "新华网OA",
        "default_popup": "popup.html"
    },
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "permissions": [
        "webRequest","notifications", "storage", "tabs","*://172.18.1.48/*","*://172.18.24.64/*","*://www.baidu.com/*","webRequestBlocking"
    ],
    "web_accessible_resources": [
        "images/*.png"
    ]
}
